---
import Layout from "../../Layouts/Layout.astro";
import { checkUserRole } from "../api/auth/roleBasedRedirect";
import UserTable from "../../components/jsx/userTable";
import Pastilla from "../../components/ActAcademicas/detalle/Pastilla.astro";
import Registro from "../../components/modales/Registro.astro";

// Obtener información del usuario y su rol
const userData = await checkUserRole(Astro, ["admin", "user", "guest"]);

// Si no está autenticado, redirigir
if (!userData) {
  return Astro.redirect("/signin");
}
---

<Layout title="Perfil">
  <Pastilla title="Gestor de usuarios" />
  <div class="max-w-6xl mx-auto p-4 md:p-8 mb-auto">
      <!-- Sección condicional de permisos para admins -->
      {userData.role === "admin" && (
        <div class="mb-6">
          <UserTable client:load />
          <Registro />
        </div>
      )}
      </div>
      
      {userData.role === "user" && (
        <!-- Seccion condicional de users y guest -->
      <div class="max-w-full bg-gradient-to-r from-blue-500 to-purple-600 text-white p-6 rounded-lg shadow-lg mb-6">
        <h2 class="text-3xl font-bold">Bienvenido, {userData.name}</h2>
        <p class="text-lg">Aquí puedes ver tu información personal y opciones disponibles.</p>
      </div>

        <div class="max-w-full mx-auto p-2 md:p-2 grid grid-cols-1 md:grid-cols-3 gap-6">
    
          <!-- Columna izquierda (perfil e información personal) -->
          <div class="col-span-1">
            
      
            <div class="bg-white p-6 rounded-lg shadow-md">
              <div class="flex items-center space-x-4">
                <div class="w-20 h-20">
                  <img 
                    src={userData.profilePicture || "/placeholder-profile.png"} 
                    alt="Foto de perfil"
                    class="w-full h-full object-cover rounded-full shadow-md"
                  />
                </div>
                <div>
                  <p class="text-xl font-semibold text-gray-800">{userData.name}</p>
                  <p class="text-gray-500">{userData.email}</p>
                </div>
              </div>
            </div>
          </div>
      
          <!-- Columna derecha (actividades recientes) -->
          <div class="col-span-2">
            <div class="bg-white p-6 rounded-lg shadow-md">
              <h3 class="text-xl font-semibold text-gray-700 mb-4">Actividades recientes</h3>
              <ul class="list-disc pl-5 text-gray-600">
                <li>No tienes actividades recientes por el momento.</li>
                <!-- Agregar actividades si es necesario -->
              </ul>
            </div>
          </div>
        </div>

          <!-- Columna central (permisos bloqueados) -->
          <div class="col-span-3">
            <div class="bg-gray-50 p-6 rounded-lg shadow-md mb-6">
              <h3 class="text-xl font-semibold text-gray-700 mb-4">Tus permisos</h3>
              <div class="grid grid-cols-1 gap-4">
                <div class="bg-gray-200 p-4 rounded-lg text-center">
                  <p class="text-lg font-medium text-gray-500">Acceso a configuración</p>
                  <span class="text-red-500 font-bold block mt-2">Bloqueado</span>
                </div>
                <div class="bg-gray-200 p-4 rounded-lg text-center">
                  <p class="text-lg font-medium text-gray-500">Editar perfil</p>
                  <span class="text-red-500 font-bold block mt-2">Bloqueado</span>
                </div>
              </div>
            </div>
          </div>
      )}
      
</Layout>
